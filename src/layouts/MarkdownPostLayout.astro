---
import BaseLayout from "./BaseLayout.astro";
import { Picture } from "astro:assets";
const { frontmatter } = Astro.props;
export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
  frontmatter: { // Add this section
        title: string;
        description: string;
        pubDate: Date;
        author: string;
        image: string;
        imageAlt: string;
    };
}
const { title, description, permalink, current } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} permalink={permalink}>
  <main class="pt-4">

    <h1 class="">{frontmatter.title}</h1>

    <p>{frontmatter.pubDate.toString().slice(0,10)}</p>
    


    <Picture formats={['avif', 'webp']} src={frontmatter.image} alt={frontmatter.imageAlt} width="1322" height="887" class=" rounded-lg ml-0 mr-0 mx-auto my-4" />

    <slot />

  </main>
</BaseLayout>
